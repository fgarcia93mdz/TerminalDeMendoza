     <br>
     <h2 style="text-align: center">REGISTRO DE UN NUEVO INGRESO</h2>
     <% if(usuario.estado_password === 0) { %>
     <a href="">
         <h3
             style="color: red; background-color:rgba(188, 187, 187, 0.721); border-radius: 10px; width: 100%; text-decoration:none">
             Te recordamos <%- usuario.nombre %> que por políticas de seguridad debes de cambiar la contraseña
             predeterminada
             que generó recursos humanos antes de continuar </h3>
     </a>
     <% } else { %>
     <h6 style="text-align: center; color: red">* Le recordamos que todos los campos son obligatorio</h6>
     <br>

     <div class="container">
         <form action='/ingreso/sector/seguridad/:id/registroInforme' method="POST">
             <label for="fecha">Fecha de ingreso:</label>
             <input type="date" id="fecha" name="fecha" <%= locals.errors && errors.fecha ? 'is-invalid' : null %>"
                 value="<%= locals.oldData ? oldData.fecha : null %> " required>
             <% if (locals.errors && errors.fecha) { %>
             <div class="text-danger msg">
                 <%= errors.fecha.msg %>
             </div>
             <br>
             <% } %>

             <label for="hora">Hora de ingreso:</label>
             <input type="time" id="hora" name="hora"
                 <%= locals.errors && errors.hora ? 'is-invalid' : null %>"
                 value="<%= locals.oldData ? oldData.hora : null %> " required>
             <% if (locals.errors && errors.hora) { %>
             <div class="text-danger msg">
                 <%= errors.hora.msg %>
             </div>
             <br>
             <% } %>

             <label for="password">Contraseña <span style="color:red">(el valor es predeterminado para todos los
                     usuarios)</span></label>
             <input type="text" id="password" name="password" value="123$">

             

             <label for="usuario">Usuario</label>
             <input type="text" id="usuario" name="usuario"
                 <%= locals.errors && errors.usuario ? 'is-invalid' : null %>"
                 value="<%= locals.oldData ? oldData.usuario : null %> " required>
             <% if (locals.errors && errors.usuario) { %>
             <div class="text-danger msg">
                 <%= errors.usuario.msg %>
             </div>
             <% } %>
             <br>
             <button type="submit">
                 Registrar Ingreso
             </button>
         </form>
     </div>
